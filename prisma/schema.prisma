generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ChatConfig {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  chatId           Int       @unique
  firstName        String    @default("")
  username         String?
  language         Language
  percentage       Float
  selectedPairs    String[]
  stoppedExchanges String[]
  windowSize       Int
  state            ChatState
  paidUntil        DateTime?
  trialUntil       DateTime?
}

enum Language {
  EN
  RU
  UA
}

enum ChatState {
  START
  SETTINGS
  SELECT_PAIRS
  SELECT_PERCENTAGE
  SELECT_WINDOW_SIZE
  CHANGE_LANGUAGE
  UNSUBSCRIBE_EXCHANGES
  SUBSCRIBE
  SEARCHING
  STOPPED
}
